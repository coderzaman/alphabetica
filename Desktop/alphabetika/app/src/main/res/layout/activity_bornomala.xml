<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimaryDark"
android:padding="16dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Shoroborno button -->
        <Button
            android:id="@+id/btnShoroborno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="স্বরবর্ণ"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textColor="#fff"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />

        <!-- BenjonBorno button -->
        <Button
            android:id="@+id/btnBenjonBorno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ব্যঞ্জনবর্ণ"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Shognka button -->
        <Button
            android:id="@+id/btnShognka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="সংখ্যা"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />

        <!-- English button -->
        <Button
            android:id="@+id/btnEng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />
        <!-- Number button -->
        <Button
            android:id="@+id/btnNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />
        <!-- Arabic button -->
        <Button
            android:id="@+id/btnArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="العربية"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Arabic Numerical button -->
        <Button
            android:id="@+id/btnArabicNumerical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الأرقام العربية"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:paddingVertical="20dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</ScrollView>
</FrameLayout>
