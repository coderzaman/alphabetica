<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/colorPrimaryDark"
    android:weightSum="6"
    android:paddingBottom="10dp">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/soro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="১"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/sora"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="২"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/rose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৩"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/dirge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৪"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/roso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৫"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/dirgo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৬"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/ri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৭"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৮"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/oi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="৯"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/o"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="১০"
            android:textSize="70sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Row 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp">


        <ImageView
            android:id="@+id/backIds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />
    </LinearLayout>
</LinearLayout>
